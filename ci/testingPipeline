pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                // Clone repo and install dependencies
                git credentialsId: 'GITHUB_PAT', 
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git', 
                    branch: 'master'
                
                bat 'npm install'
            }
        }

        stage('Lint') {
            steps {
                bat 'npm run lint'
            }
        }
        // stage('Unit tests with coverage') {
        //     steps {
        //         sh 'npm run unit_tests_coverage'
        //     }
        // }

        // stage('Unit tests') {
        //     steps {
        //         sh 'npm run unit_tests'
        //     }
        // }
        

        stage('API tests') {
            steps {
                bat 'npm install'
                bat 'npm run start_server &'   // start in background
                bat 'sleep 15'                  // wait for server to start
                bat 'npm run api_tests'
            }
        }
    }

    // post {
    //     success {
    //         echo "All quality gates passed."
    //         githubNotify context: 'Testing Pipeline', status: 'SUCCESS'
    //     }
    //     failure {
    //         echo "Quality gate failed."
    //         githubNotify context: 'Testing Pipeline', status: 'FAILURE'
    //     }
    // }
}
