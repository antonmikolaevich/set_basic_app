pipeline {

    agent any

    stages {

        stage('Checkout & Install') {
            steps {
                git credentialsId: 'GITHUB_PAT',
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git',
                    branch: 'master'

                sh 'npm install'
            }
        }

        stage('Lint') {
            steps {
                sh 'npm run lint'
                sh 'curl https://ifconfig.me'
            }
        }




        // stage('Unit Tests Coverage') {
        //     steps {
        //         sh 'npm run unit_tests_coverage'
        //     }
        // }

        // stage('Unit Tests') {
        //     steps {
        //         sh 'npm run unit_tests'
        //     }
        // }



        stage('API Tests') {
            steps {
                withCredentials([string(credentialsId: 'MONGO_URI', variable: 'MONGO_URI')]) {

                    // Start server in background with correct env
                    sh '''
                        echo "Starting API server..."
                        MONGO_URI="$MONGO_URI" npm run start_server &
                        SERVER_PID=$!
                        echo "Server PID: $SERVER_PID"

                        sleep 5
                        echo "Running API tests..."
                        npm run api_tests

                        echo "Stopping API server..."
                        kill $SERVER_PID || true
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "All quality gates passed."
            githubNotify context: 'Testing Pipeline', status: 'SUCCESS'
        }
        failure {
            echo "Quality gate failed."
            githubNotify context: 'Testing Pipeline', status: 'FAILURE'
        }
    }
}
