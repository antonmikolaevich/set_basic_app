<div class="modal fade" id="editStoreItemModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">

      <form id="editStoreItemForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Edit Store Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="id" id="edit-store-id">

          <div class="mb-3">
            <label class="form-label">Product ID</label>
            <input name="product_id" id="edit-store-product-id" class="form-control" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Available Qty</label>
            <input type="number" name="available_qty" id="edit-store-available" class="form-control" min="0" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Booked Qty</label>
            <input type="number" name="booked_qty" id="edit-store-booked" class="form-control" min="0" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Sold Qty</label>
            <input type="number" name="sold_qty" id="edit-store-sold" class="form-control" min="0" required>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>

      </form>

    </div>
  </div>
</div>
