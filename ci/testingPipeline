pipeline {
    agent any

    environment {
        MONGO_URI = credentials('MONGO_URI')
    }

    stages {
        stage('Clone & Install Dependencies') {
            steps {
                git credentialsId: 'GITHUB_PAT',
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git',
                    branch: 'master'

                bat 'npm install'
            }
        }

        stage('Lint') {
            steps {
                bat 'npm run lint'
            }
        }

        stage('Run Server & API Tests') {
            steps {
                withCredentials([string(credentialsId: 'MONGO_URI', variable: 'MONGO_URI')]) {
                    // Start Node server in the background using PowerShell
                    powershell """
                    Start-Process -NoNewWindow -FilePath npm -ArgumentList 'run start_server'
                    Start-Sleep -Seconds 15
                    npm run api_tests
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline finished successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
