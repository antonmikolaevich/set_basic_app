<div class="modal fade" id="createStoreItemModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">

      <form id="createStoreItemForm" method="POST" action="/bookstore/create">
        <div class="modal-header">
          <h5 class="modal-title">Create Store Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">

          <div class="mb-3">
            <label class="form-label">Product ID</label>
            <input name="product_id" class="form-control" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Available Quantity</label>
            <input type="number" name="available_qty" class="form-control" min="0" value="0" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Booked Quantity</label>
            <input type="number" name="booked_qty" class="form-control" min="0" value="0" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Sold Quantity</label>
            <input type="number" name="sold_qty" class="form-control" min="0" value="0" required>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            Create Bookstore Item
          </button>
        </div>

      </form>

    </div>
  </div>
</div>
