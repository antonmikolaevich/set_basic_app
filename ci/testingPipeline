pipeline {
    agent any

    options {
        // Ensures only one branch/job runs at a time for this repo
        lock(resource: 'set_basic_app-global-lock')
    }

    stages {

        stage('Checkout & Install') {
            steps {
                git credentialsId: 'GITHUB_PAT',
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git',
                    branch: 'master'

                sh 'npm install'
            }
        }

        stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }

        stage('Unit Tests Coverage') {
            steps {
                withCredentials([string(credentialsId: 'MONGO_URI', variable: 'MONGO_URI')]) {
                    sh '''
                        echo "Setting up roles..."
                        MONGO_URI="$MONGO_URI" npm run set_roles

                        echo "Setting up booking statuses..."
                        MONGO_URI="$MONGO_URI" npm run set_booking_statuses

                        echo "Starting API server for Unit Tests Coverage..."
                        MONGO_URI="$MONGO_URI" npm run start_server &
                        SERVER_PID=$!
                        echo "Started server with PID: $SERVER_PID"

                        sleep 15
                        echo "Running Unit Test Coverage..."
                        npm run unit_tests_coverage

                        echo "Stopping API server..."
                        kill $SERVER_PID || true
                    '''
                }
            }
        }

        stage('Unit Tests') {
            steps {
                withCredentials([string(credentialsId: 'MONGO_URI', variable: 'MONGO_URI')]) {
                    sh '''
                        echo "Setting up roles..."
                        MONGO_URI="$MONGO_URI" npm run set_roles

                        echo "Setting up booking statuses..."
                        MONGO_URI="$MONGO_URI" npm run set_booking_statuses

                        echo "Starting API server for Unit Tests..."
                        MONGO_URI="$MONGO_URI" npm run start_server &
                        SERVER_PID=$!
                        echo "Started server with PID: $SERVER_PID"

                        sleep 15
                        echo "Running Unit Tests..."
                        npm run unit_tests

                        echo "Stopping API server..."
                        kill $SERVER_PID || true
                    '''
                }
            }
        }

        stage('API Tests') {
            steps {
                withCredentials([string(credentialsId: 'MONGO_URI', variable: 'MONGO_URI')]) {
                    sh '''
                        echo "Setting up roles..."
                        MONGO_URI="$MONGO_URI" npm run set_roles

                        echo "Setting up booking statuses..."
                        MONGO_URI="$MONGO_URI" npm run set_booking_statuses

                        echo "Starting API server..."
                        MONGO_URI="$MONGO_URI" npm run start_server &
                        SERVER_PID=$!
                        echo "Started server with PID: $SERVER_PID"

                        sleep 15
                        echo "Running API Tests..."
                        npm run api_tests

                        echo "Stopping API server..."
                        kill $SERVER_PID || true
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "All quality gates passed."
            withCredentials([string(credentialsId: 'GITHUB_PAT_TOKEN', variable: 'TOKEN')]) {
                sh """
                curl -X POST \
                -H "Authorization: token \$TOKEN" \
                -H "Accept: application/vnd.github+json" \
                https://api.github.com/repos/antonmikolaevich/set_basic_app/statuses/\${GIT_COMMIT} \
                -d '{
                    "state": "success",
                    "context": "Jenkins CI",
                    "description": "All quality gates passed"
                }'
                """
            }
        }



        failure {
            echo "Quality gate failed."
            withCredentials([string(credentialsId: 'GITHUB_PAT_TOKEN', variable: 'TOKEN')]) {
                sh """
                curl -X POST \
                -H "Authorization: token \$TOKEN" \
                -H "Accept: application/vnd.github+json" \
                https://api.github.com/repos/antonmikolaevich/set_basic_app/statuses/\${GIT_COMMIT} \
                -d '{
                    "state": "failure",
                    "context": "Jenkins CI",
                    "description": "One or more stages failed"
                }'
                """
            }
        }
    }
}
