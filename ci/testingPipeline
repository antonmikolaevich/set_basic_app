pipeline {
    agent any

    environment {
        // Inject secret globally if you want
        MONGO_URI = credentials('MONGO_URI')
    }

    stages {
        stage('Install dependencies') {
            steps {
                git credentialsId: 'GITHUB_PAT', 
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git', 
                    branch: 'master'
                
                bat 'npm install'
            }
        }

        stage('Lint') {
            steps {
                bat 'npm run lint'
            }
        }

        stage('API tests') {
            steps {
                // Start server and run tests
                bat 'start /B npm run start_server'   // run in background
                bat 'timeout /T 15 /NOBREAK'         // wait 15 seconds
                bat 'npm run api_tests'
            }
        }
    }
}
