pipeline {
    agent any

    environment {
        // Inject MONGO_URI from Jenkins Secret Text
        MONGO_URI = credentials('MONGO_URI')
    }

    stages {
        stage('Clone Repository & Install Dependencies') {
            steps {
                git credentialsId: 'GITHUB_PAT',
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git',
                    branch: 'master'

                bat 'npm install'
            }
        }

        stage('Lint') {
            steps {
                bat 'npm run lint'
            }
        }

        stage('API Tests') {
            steps {
                withCredentials([string(credentialsId: 'MONGO_URI', variable: 'MONGO_URI')]) {
                    // Start the server in **foreground** so Windows CMD doesnâ€™t fail
                    // Wait 15 seconds for server to be ready
                    // Then run API tests
                    bat """
                    start "" /WAIT cmd /C "npm run start_server"
                    timeout /T 15 /NOBREAK
                    npm run api_tests
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline finished successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}