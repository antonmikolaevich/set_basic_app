<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title || "BookShop Manager" %></title>

  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <%- include("partials/header") %>

  <main class="container my-4">
    <%- body %>
  </main>

  <%- include("partials/footer") %>
    <!-- Product Modals -->
  <%- include("partials/productsModals/editProductModal") %>
  <%- include("partials/productsModals/deleteProductModal") %>
  <%- include("partials/productsModals/createProductModal") %>

  <%- include("partials/toasts") %>

    <!-- Booking Modal -->
  <%- include("partials/bookingsModals/createBookingModal") %>
  <%- include("partials/bookingsModals/editBookingModal") %>
  <%- include("partials/bookingsModals/deleteBookingModal") %>

    <!-- Store Item Modals -->
  <%- include("partials/bookstoreModals/createBookstoreModal") %>
  <%- include("partials/bookstoreModals/editBookstoreModal") %>
  <%- include("partials/bookstoreModals/deleteBookstoreModal") %>
    <!-- Users Modals -->
  <%- include("partials/usersModals/createUsersModal") %>
  <%- include("partials/usersModals/editUsersModal") %>
  <%- include("partials/usersModals/deleteUsersModal") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
  <script src="/js/main.js" defer></script>
</body>
</html>