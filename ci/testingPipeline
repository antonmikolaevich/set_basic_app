pipeline {
    agent any

    environment {
        MONGO_URI = credentials('MONGO_URI')
    }

    stages {
        stage('Clone & Install') {
            steps {
                git credentialsId: 'GITHUB_PAT',
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git',
                    branch: 'master'
                bat 'npm install'
            }
        }

        stage('Lint') {
            steps {
                bat 'npm run lint'
            }
        }

        stage('API Tests') {
            steps {
                withCredentials([string(credentialsId: 'MONGO_URI', variable: 'MONGO_URI')]) {
                    bat 'start "" /B cmd /C "npm run start_server > server.log 2>&1"'
                    bat 'timeout /T 15 /NOBREAK'
                    bat 'npm run api_tests'
                    bat 'taskkill /IM node.exe /F'  // optional cleanup
                }
            }
        }
    }

    post {
        success { echo "Pipeline finished successfully." }
        failure { echo "Pipeline failed." }
    }
}
