pipeline {
    agent any

    environment {
        // Inject MONGO_URI from Jenkins Secret Text credential
        MONGO_URI = credentials('MONGO_URI')
    }

    stages {
        stage('Clone Repository & Install Dependencies') {
            steps {
                // Clone repo using GitHub credentials
                git credentialsId: 'GITHUB_PAT', 
                    url: 'https://github.com/antonmikolaevich/set_basic_app.git', 
                    branch: 'master'
                
                // Install npm dependencies
                bat 'npm install'
            }
        }

        stage('Lint') {
            steps {
                bat 'npm run lint'
            }
        }

        stage('Start Server & Run API Tests') {
            steps {
                // Start server in background safely on Windows
                bat 'start /B cmd /c "npm run start_server > server.log 2>&1"'

                // Wait 15 seconds for server to start
                bat 'timeout /T 15 /NOBREAK'

                // Run API tests
                bat 'npm run api_tests'
            }
        }
    }

    post {
        success {
            echo "Pipeline finished successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
